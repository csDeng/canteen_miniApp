page{
  background: #f2f2f2;
}

.pages {
  width: 100%;
  height:100%;
  background: #f2f2f2;
  overflow-x: hidden;
}
.pages .item {
  background: #fff;
  width: 680rpx;
  height: 360rpx;
  margin: 10rpx 35rpx;
  font-size: small;
  margin-top: 30rpx;
  border-radius: 40rpx;
}
.pages .item .isPaid {
  padding: 14rpx 44rpx;
  height: 30px;
  border-radius: 40rpx;
  color: #666666;
  display: flex;
  justify-content: space-between;
}
.pages .item .isPaid .name {
  margin-top: 10rpx;
}
.pages .item .carts {
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  width: 75vw;
}
.pages .item .carts .productImg_cart {
  width: 170rpx;
  height: 100px ;
}
.pages .item .carts .productImg_cart image {
  width: 78px;
  height: 84px !important;
  border-radius: 20rpx;
}
.pages .item .carts .cartInfo {
  flex: 2;
  padding: 75rpx 79rpx;
  display: flex;
  flex-direction: column;
}
.pages .item .carts .cartInfo .cartName {
  font-size: 12px;
  color: #333333;
}
.pages .item .carts .cartPrice {
  margin: 30px 20px;
}
.pages .item .amount {
  position: relative;
  height: 0;
  top: -122rpx;
  left: 73vw;
  color: #999999;
}
.pages #last {
  margin-bottom: 30rpx;
}
